    <script>
      const hamburger = document.getElementById('hamburger');
      const mobileMenu = document.getElementById('mobile-menu');
    
      hamburger.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
      const gallery = document.getElementById('gallery');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');

  let currentIndex = 0;
  const totalItems = gallery.children.length;

  // Function to update the position of the gallery
  function updateGalleryPosition() {
    const offset = currentIndex * -100;  // Move by 100% for each item
    gallery.style.transform = `translateX(${offset}vw)`;
  }

  // Next button click event for infinite traversal
  nextBtn.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % totalItems;  // Loop back to the first item if we reach the last one
    updateGalleryPosition();
  });

  // Previous button click event for infinite traversal
  prevBtn.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + totalItems) % totalItems;  // Loop to the last item if we go below 0
    updateGalleryPosition();
  });

  document.getElementById('close-button').addEventListener('click', function() {
    document.getElementById('mobile-menu').classList.add('hidden');
  });
    </script>
